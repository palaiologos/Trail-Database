<!DOCTYPE html>
<html lang="en">
<head>
  <title>Trails Database Project</title>
  <meta charset="utf-8">
  <!-- Using bootstrap for easier, standard styling and div placement -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <link rel="stylesheet" href="style.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  <script type="text/javascript" src="script.js"></script>
</head>

<!-- Navbar -->
<nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="/index">Home</a>
    </div>
    <ul class="nav navbar-nav">
      <li><a href="/trail">Trails</a></li>
      <li><a href="/contact">Contacts</a></li>
      <li><a href="/user">Users</a></li>
      <li><a href="/review">Reviews</a></li>
      <li><a href="/location">Locations</a></li>
    </ul>
  </div>
</nav> <!-- End navbar -->

<body>

  <!-- Main container -->
  <div class="container">
    <div class="row">
      <h3 class="text-center text-primary" style="font-size:200%; color:#DC143C;">Contacts Info</h3>
      <!-- Table -->
      <table class="table">
        <thead>
          <tr class="active">
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Address</th>
            <th scope="col">City</th>
            <th scope="col">State</th>
            <th scope="col">Zip Code</th>
            <th scope="col">Phone Number</th>
            <th scope="col">Website URL</th>
          </tr>
        </thead>
        <tbody>
            {{#each contact}}
            <tr>
              <th scope="row">{{id}}</th>
              <td>{{orgName}}</td>
              <td>{{orgAddress}}</td>
              <td>{{city}}</td>
              <td>{{state}}</td>
              <td>{{zipCode}}</td>
              <td>{{phoneNumber}}</td>
              <td>{{websiteURL}}</td>
              <td><button type="button" class="btn btn-info" onclick="deleteContact({{id}})">Delete</button></td>
              <td><button type="button" class="btn btn-light"><a href="/contact/{{id}}">Update</a></button></td>
            </tr>
            {{/each}} <!-- End getting each  -->
          </tbody>

        </tbody>
      </table> <!-- End table -->
    </div> <!-- End data section -->

  </div> <!-- End main container -->

  <!-- Form -->
  <div class="container">
    <h3 class="text-center text-primary" style="font-size:200%; color:#DC143C;">Add New Contact</h3>
    <form id="addContact" action="/contact" method="post">
      <div class="form-group">
        <label for="contactName">Contact Name</label>
        <input type="text" name="orgName" class="form-control" id="contactName" placeholder="Contact Name">
      </div>
      <div class="form-group">
        <label for="address">Address</label>
        <input type="text" name="orgAddress" class="form-control" id="address" placeholder="Address">
      </div>
      <div class="form-group">
        <label for="city">City</label>
        <input type="text" name="city" class="form-control" id="city" placeholder="city">
      </div>
      <div class="form-group">
        <label for="state">State</label>
        <input type="text" name="state" class="form-control" id="state" placeholder="state">
      </div>
      <div class="form-group">
        <label for="zipCode">Zip Code</label>
        <input type="number" name="zipCode" class="form-control" id="zipCode" placeholder="Zip Code">
      </div>
      <div class="form-group">
        <label for="phoneNumber">Phone Number</label>
        <input type="number" name="phoneNumber" class="form-control" id="phoneNumber" placeholder="Phone Number">
      </div>
      <div class="form-group">
        <label for="websiteURL">Website URL</label>
        <input type="text" name="websiteURL" class="form-control" id="websiteURL" placeholder="Website URL">
      </div>
      <button class="btn btn-primary">
        <input type="submit" value="Submit">
      </button>
    </form>

  </div>
  <!-- End form -->

</body>

</html>
