<!DOCTYPE html>
<html lang="en">
<head>
  <title>Trails Database Project</title>
  <meta charset="utf-8">
  <!-- Using bootstrap for easier, standard styling and div placement -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <link rel="stylesheet" href="style.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  <script type="text/javascript" src="script.js"></script>
</head>

<!-- Navbar -->
<nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="/index">Home</a>
    </div>
    <ul class="nav navbar-nav">
      <li><a href="/trail">Trails</a></li>
      <li><a href="/contact">Contacts</a></li>
      <li><a href="/user">Users</a></li>
      <li><a href="/review">Reviews</a></li>
      <li><a href="/location">Locations</a></li>
    </ul>
  </div>
</nav> <!-- End navbar -->

<body>
  <!-- Main container -->
  <div class="container">
    <div class="row">
      <h3 class="text-center text-primary" style="font-size:200%; color:#DC143C;">Location Info</h3>
      <!-- Table -->
      <table class="table">
        <thead>
          <tr class="active">
            <th scope="col">ID</th>
            <th scope="col">Region</th>
            <th scope="col">Nearest City</th>
          </tr>
        </thead>
        <tbody>
              <!-- Begin getting each loc from db -->
              {{#each location}}

              <tr>
                <th scope="row">{{id}}</th>
                <td>{{region}}</td>
                <td>{{nearestCity}}</td>
              </tr>

              {{/each}} <!-- End getting each loc -->


        </tbody>
      </table> <!-- End table -->
    </div> <!-- End data section -->

  </div> <!-- End main container -->

</body>


</html>
