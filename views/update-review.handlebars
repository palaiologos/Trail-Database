<!-- Form -->
<div class="container">
  <h3 class="text-center text-primary" style="font-size:200%; color:#DC143C;">Update Review From {{review.date}}</h3>
  <form id="update-review" action="/review" method="post">
    <div class="form-group">
      <label for="date">Date</label>
      <input type="date" name="date" class="form-control" id="date" value="{{review.date}}">
    </div>
    <div class="form-group">
      <label for="comment">Comment</label>
      <input type="textarea" name="comment" class="form-control" id="comment" value="{{review.comment}}">
    </div>
    <button class="btn btn-primary">
      <input type="submit" value="Submit">
    </button>
  </form>

</div>
<!-- End form -->
